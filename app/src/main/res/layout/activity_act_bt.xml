<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <RelativeLayout
        android:id="@+id/unit1"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button

            android:id="@+id/StartScanButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"


            android:text="Start Scanning" />
        <Button
            android:id="@+id/StopScanButton"
            android:layout_width="100dp"
            android:layout_toEndOf="@id/StartScanButton"
            android:layout_height="wrap_content"


            android:text="Stop Scanning" />
        <EditText
            android:id="@+id/senddata"
            android:layout_toEndOf="@id/StopScanButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content">

        </EditText>
        <Button
            android:id="@+id/senddatabtn"
            android:layout_width="100dp"
            android:layout_toEndOf="@id/senddata"
            android:layout_height="wrap_content"
            android:text="Send data"
            >

        </Button>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/devname"
        android:layout_below="@id/unit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

<EditText
    android:id="@+id/devnameedittext"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:hint="Enter device name">

</EditText>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/devname">
        <TextView
            android:id="@+id/PeripheralTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>



    </RelativeLayout>



</RelativeLayout>