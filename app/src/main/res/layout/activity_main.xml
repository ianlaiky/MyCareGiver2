<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/add_appt_btn"

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/ApptAdd" />


        <Button
            android:id="@+id/add_med_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_appt_btn"
            android:layout_centerHorizontal="true"
            android:text="@string/add_medication_info" />

        <Button
            android:id="@+id/add_eme_ctc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_med_btn"
            android:layout_centerHorizontal="true"
            android:text="@string/add_emergency_contact" />
        <Button
            android:id="@+id/testingbtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_eme_ctc"
            android:layout_centerHorizontal="true"
            android:text="*TESTING* Println appt data" />
        <Button
            android:id="@+id/testingbtn2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/testingbtn"
            android:layout_centerHorizontal="true"
            android:text="*TESTING* Println med data" />
        <Button
            android:id="@+id/testingbtn3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/testingbtn2"
            android:layout_centerHorizontal="true"
            android:text="*TESTING* Println ctc data" />
        <TextView
            android:layout_below="@+id/testingbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testingtextview"
            android:text="test"
            />

    </RelativeLayout>
</RelativeLayout>